<h1>Edit Arrangement</h1>
<form action="/arrangement-edit" name="arrangement-edit" method="POST">
    <table>
        <tr>
            <td>Arrangement ID</td>
            <td><input type="text" name="id" value="<%=arrangement.id %>" required></td>
        </tr>
        <tr>
            <td>Arrangement Name</td>
            <td><input type="text" name="name" value="<%=arrangement.name %>" required></td>
        </tr>
        <tr>
            <td>Description</td>
            <td><input type="text" name="description" value="<%=arrangement.description %>" required></td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Save"></td>
        </tr>
    </table>
</form>
